# ATUM DESK Environment Configuration
# Copy to .env and customize for your deployment

# Application
DEBUG=false
ENVIRONMENT=production

# Database
DATABASE_URL=postgresql+psycopg://atum:atum@localhost:5432/atum_desk

# Redis
REDIS_URL=redis://localhost:6379/1

# Security (CHANGE IN PRODUCTION!)
SECRET_KEY=change-this-to-a-secure-random-string-in-production

# Email (Optional - configure for notifications)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_FROM=support@yourdomain.com

# AI (Ollama)
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=ATUM-DESK-AI:latest
AI_ENABLED=true

# File Upload
UPLOAD_DIR=/data/ATUM DESK/atum-desk/data/uploads

# Frontend URL
FRONTEND_URL=https://localhost
